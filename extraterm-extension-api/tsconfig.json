{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "removeComments": false,
        "sourceMap": true,
        "noLib": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "typeRoots" : ["./typings"],
        "paths": {
         "*": ["./typings/*"]
        },
        "baseUrl": "."
      
    },
    "filesGlob": [
        "./*.ts",
        "./typings/**/*.ts",
        "!./src/node_modules/**/*.ts"
    ],
    "exclude": [
        "./dist/*.*",
        "./dist/**/*.*"
    ]
}
